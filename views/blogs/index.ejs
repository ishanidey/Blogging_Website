<head>
  <link href="/style.css" rel="stylesheet" type="text/css">
</head>

<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/banner.ejs") %>
  <div class="w3-large blue-bg">
    <div class="blogs content">
      <h2 class="w3-center w3-padding-64"><span class="w3-tag w3-wide">All Blogs</span></h2>

      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <a href="/blogs/<%= blog._id %>">
            <div class="blog-item">
              <h3><%= blog.title %></h3>
              <h6><%= blog.createdAt %></h6>
              <div class="blog-content">
                <p><%= blog.snippet %></p>
                <img src="<%= blog.image %>" class="blog-image">
              </div>
            </div>
          </a>
        <% }) %>
      <% } else { %>
        <p>There are no blogs to display...</p>
      <% } %>
    </div>
    <div class="about-message">
      <p>Want to know about me?</p>
      <a href="https://ishanidey.netlify.app/">Checkout my portfolio website</a>
    </div>
  </div>

  <%- include("../partials/footer.ejs") %>
</body>
</html>
